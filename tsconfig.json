{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "esnext",
    ],
    "jsx": "preserve", 
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    // "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "outDir": "dist",
    "baseUrl": "./",
    "types": [
      "vite/client",
      "node",
      "vite-svg-loader",
    ],
    "plugins": [
      {"name": "@vuedx/typescript-plugin-vue"}
    ],
    "paths": {
      "@/*": ["src/*"],
      "@api/*": ["./src/api/*"],
      "@router/*": ["./src/router/*"],
      "@types/*": ["src/types/*"],
      "@scss/*": ["./src/scss/*"],
      "@components/*": ["./src/components/*"],
      "@views/*": ["./src/views/*"],
      "@assets/*": ["./src/assets/*"],
      "@request/*": ["./src/request/*"],
      "@utils/*": ["./src/utils/*"],
      "@special/*": ["./src/special/*"],
      "@stores/*": ["./src/stores/*"],
      "@widgets/*": ["./src/widgets/*"]
    }
  },
  "include": [
    "viteConfig/**/*.ts", //必须指定，否则不能解析viteConfig下的ts文件
    "viteConfig/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue", 
    "global.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "public"
  ]
}